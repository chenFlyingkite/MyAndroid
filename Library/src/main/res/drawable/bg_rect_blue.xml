<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/t5dp" android:color="#0ff"/>
            <corners android:radius="@dimen/t5dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/t2dp" android:color="#08f"/>
            <corners android:radius="@dimen/t5dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/t2dp" android:color="#eee"/>
            <corners android:radius="@dimen/t5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/t2dp" android:color="#fff"/>
            <corners android:radius="@dimen/t5dp"/>
        </shape>
    </item>
</selector>